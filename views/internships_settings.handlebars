<div class="dashboard-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-12">
                {{> ads}}
            </div>

            <div class="col-lg-9 col-md-8 col-sm-12">
                <div class="right sub">
                    <article>
                        <header>
                            <h2>Redigera Uppgifter</h2>
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#Redigera">Redigera Uppgifter</a></li>
                                <li><a data-toggle="tab" href="#menu1">Inställningar</a></li>
                            </ul>
                        </header>

                        <div class="tab-content">
                            <div id="Redigera" class="tab-pane fade in active">
                                <form action="/update/profile" method="POST" enctype="multipart/form-data">
                                <div class="right-content">
                                    <div class="bio-info">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="bio-image">
                                                            {{#if user.image }}
                                                            <img src="../{{user.image}}" alt="image">
                                                            {{else}}
                                                            <img src="../images/allt/usericon.png" alt="image">
                                                            {{/if}}
                                                                <input type="file"
                                                                    class="custom-file-input form-control"
                                                                    name="image" id="image"
                                                                    placeholder="Example input">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-9">
                                                <div class="bio-content">
                                                    <h2>{{ user.name }}</h2>
                                                    <h6>Boendeort <strong>{{ user.location }}</strong></h6>
                                                    <p>Utbildning <strong>{{user.education}} på
                                                            {{user.school}}</strong></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="sub-box">
                                        <div class="container">
                                            <ul class="list-unstyled row">
                                                <li class="list-item col-sm-6">
                                                    <div><strong>Namn</strong>
                                                        <p><input type="text" id="name" name="name"
                                                            placeholder="{{ user.name }}" value="{{ user.name }}"> <a href="#">Klar</a></p>
                                                    </div>

                                                </li>
                                                <li class="list-item col-sm-6">
                                                    <div><strong>Fördelsedatum </strong>
                                                        <p><input type="text" id="birthday" name="birthday"
                                                            placeholder="{{ user.birthday }}" value="{{ user.birthday }}"><a href="#">redigera <i
                                                                    class="fas fa-pencil-alt"></i></a></p>
                                                    </div>
                                                </li>
                                                <li class="list-item col-sm-6">
                                                    <div><strong>Boendeort </strong>
                                                        <p><input type="text" id="location" name="location"
                                                            placeholder="{{ user.location }}" value="{{ user.location }}"> <a href="#">redigera <i
                                                                    class="fas fa-pencil-alt"></i></a></p>
                                                    </div>
                                                </li>
                                                <li class="list-item col-sm-6">
                                                    <div><strong>Kontakt info </strong>
                                                        <p><input type="text" id="info_email" name="info_email"
                                                            placeholder="{{ user.info_email }}" value="{{ user.info_email }}"> <a href="#">redigera <i
                                                                    class="fas fa-pencil-alt"></i></a></p>
                                                        <p><input type="text" id="phone" name="phone"
                                                            placeholder="{{ user.phone }}" value="{{ user.phone }}"> <a href="#">redigera <i
                                                                    class="fas fa-pencil-alt"></i></a></p>
                                                    </div>
                                                </li>
                                                <li class="list-item col-sm-6">
                                                    <div class="social"><strong>Sociala Medier</strong>
                                                        <div><a href="#"><i class="fab fa-facebook"></i></a><a
                                                                href="#"><i class="fab fa-linkedin"></i></a><a
                                                                href="#"><i class="fab fa-instagram"></i></a></div>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>

                                    </div>
                                    <div class="clear"></div>
                                </div>

                                <div class="right-content">
                                    <h2>Redigera Uppgifter</h2>
                                    <div class="sub-box">
                                        <div class="container">
                                            <ul class="list-unstyled row">
                                                <li class="list-item col-sm-6">
                                                    <div><strong></strong>
                                                        <p><input type="text" id="school" name="school"
                                                            placeholder="{{ user.school }}" value="{{ user.school }}"><a href="#">redigera <i
                                                                    class="fas fa-pencil-alt"></i></a></p>
                                                    </div>

                                                </li>
                                                <li class="list-item col-sm-6">
                                                    <div><strong>Utbildning </strong>
                                                        <p><input type="text" id="education" name="education"
                                                            placeholder="{{ user.education }}"  value="{{ user.education }}"> <a href="#">redigera <i
                                                                    class="fas fa-pencil-alt"></i></a></p>
                                                    </div>
                                                </li>
                                                <li class="list-item col-sm-6">
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <strong>Från</strong>
                                                            <input type='date' name="started_school" id="started_school" value="{{started}}" class="sd" />
                                                        </div>
                                                        <div class="col-sm-6">
                                                            <strong>Till</strong>
                                                            <input type='date' name="ended_school" id="ended_school" value="{{ended}}" class="sd" />
                                                        </div>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>

                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="right-content">
                                    <h2>Redigera Uppgifter</h2>
                                    <h3>Välj branscher du vill jobba inom</h3>
                                    <div class="sub-box se-praktilkplatser-inom prt_1 active">

                                        <div class="container">
                                            <a class="link Praktil-link hvr-bs animated active"
                                                href="#">Kommunikation</a>
                                            <a class="link Praktil-link hvr-bs animated" href="#">Data/IT</a>
                                            <a class="link Praktil-link hvr-bs animated active" href="#">Ekonomi</a>
                                            <a class="link Praktil-link hvr-bs animated" href="#">SkapaService</a>
                                            <a class="link Praktil-link hvr-bs animated active" href="#">SePedagogik</a>
                                            <a class="link Praktil-link hvr-bs animated" href="#">Vård & Omsorg</a>
                                            <a class="link Praktil-link hvr-bs animated" href="#">Rekrytering</a>
                                            <a class="link Praktil-link hvr-bs animated" href="#">Juridik</a>
                                            <a class="link Praktil-link hvr-bs animated" href="#">Samhälle</a>
                                            <a class="link Praktil-link hvr-bs animated" href="#">Restaurang</a>
                                            <a class="link Praktil-link hvr-bs animated" href="#">Försäljning</a>
                                        </div>

                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="right-content">
                                    <h2 style="margin: 10px auto; text-align: center;">CV & Personlinligt brev</h2>
                                    <div class="container">
                                        <div class="row" style="margin: 0 auto">
                                            <div class="col-lg-6 col-sm-12">
                                                <div class="sub-box se-praktilkplatser-inom prt_1" style="width: 300px">
                                                    <h3 style="margin: 0 auto;">CV</h3>
                                                    <input type="file"
                                                                    class="custom-file-input form-control"
                                                                    name="cv" id="cv"
                                                           style="margin: 0 auto;"
                                                                    placeholder="Example input" value="{{ user.cv }}">
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-sm-12">
                                                <div class="sub-box se-praktilkplatser-inom prt_1">
                                                    <h3 style="margin: 0 auto;">Personlinligt brev</h3>
                                                    <input type="file"
                                                           style="margin: 0 auto;"
                                                                    class="custom-file-input form-control"
                                                                    name="letter" id="letter"
                                                                    placeholder="Example input" value="{{ user.letter }}">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="clear"></div>



                                    </div>
                                </div>

                                <div class="right-content-btn">
                                    <button class="btn" type="submit">Spara inställningar</button>
                                </div>
                                </form>

                            </div>
                            <div id="menu1" class="tab-pane fade">
                                <div class="container installningar">
                                    <div class="row">
                                        <div class="col-sm-12 col-md-6">
                                            <h2>Uppgifter</h2>

                                            <form action="/update/account" method="POST" enctype="multipart/form-data">
                                                <ul>
                                                    <li><label>Epost</label>
                                                        <input type="text" id="email" name="email" placeholder="{{ user.email }}" value="{{ user.email }}">
                                                    </li>
                                                    <li><label>Nytt Lösenord</label>
                                                        <input type="password" id="password" name="password" placeholder="" required ></li>
                                                    <li><label>bekräfta Nytt Lösenord</label>
                                                        <input type="password" name=""></li>
                                                </ul>
                                                <button type="submit" class="btn">Ändra Lösendord</button>
                                            </form>


                                        </div>
                                        <div class="col-sm-12 col-md-6">

                                            <h2>Notiser </h2>

                                            <form action="/notifications" method="POST">
                                                <ul>
                                                    <li><label>jag vill prenumerera på Praktils Nyhetsbrev</label>
                                                        <input type="radio" id="notifications" name="notifications" value="{{ user.notifications }}"> Ja tack!</li>
                                                </ul>
                                                <button type="submit" class="btn">Spara Notisinställningar</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </article>

                </div>

            </div>
        </div>
    </div>
</div>