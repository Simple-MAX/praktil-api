<div class="dashboard-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-12">
                {{> active_ads}}
            </div>

            <div class="col-lg-9 col-md-8 col-sm-12">
                <div class="right sub">
                    <article>
                        <header>
                            <h2>Konto Inställningar</h2>
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#Redigera">Redigera Uppgifter</a></li>
                                <li><a data-toggle="tab" href="#menu1">Inställningar</a></li>
                            </ul>
                        </header>

                        <div class="tab-content">
                            <div id="Redigera" class="tab-pane fade in active">
                                <div class="right-content">
                                    <form action="/update/profile" method="POST" enctype="multipart/form-data">
                                    <div class="bio-info">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="bio-image">
                                                            {{#if user.image }}
                                                            <img src="../{{user.image}}" alt="image">
                                                            {{else}}
                                                            <img src="../images/allt/usericon.png" alt="image">
                                                            {{/if}}
                                                                <input type="file"
                                                                    class="custom-file-input form-control"
                                                                    name="image" id="image"
                                                                    placeholder="Example input">
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-9">
                                                <div class="bio-content">
                                                    <h2>{{ user.name }}</h2>
                                                    <h6><span>Org nr:
                                                            <strong>{{ user.org_number }}</strong></span><span>Stad:
                                                            <strong>{{ user.location }}</strong></span></h6>
                                                    <p><strong>Utbildning</strong>
                                                        <input type="text" id="description" name="description"
                                                            placeholder="{{ user.description }}">
                                                        <a href="#">redigera <i class="fas fa-pencil-alt"></i></a>

                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="sub-box">
                                        <div class="container">
                                            <ul class="list-unstyled row">
                                                <li class="list-item col-sm-6">
                                                    <div><strong>Företagsnamn</strong>
                                                        <p class="klar"><input type="text" id="name" name="name"
                                                                placeholder="{{ user.name }}"> <a href="#">Klar</a>
                                                        </p>
                                                    </div>

                                                </li>
                                                <li class="list-item col-sm-6">
                                                    <div><strong>Org nummer </strong>
                                                        <p><input type="text" id="org_number" name="org_number"
                                                                placeholder="{{ user.org_number }}"><a href="#">redigera
                                                                <i class="fas fa-pencil-alt"></i></a></p>
                                                    </div>
                                                </li>
                                                <li class="list-item col-sm-6">
                                                    <div><strong>Plats/Adress </strong>
                                                        <p><input type="text" id="location" name="location"
                                                                placeholder="{{ user.location }}"><a href="#">redigera
                                                                <i class="fas fa-pencil-alt"></i></a></p>
                                                    </div>
                                                </li>
                                                <li class="list-item col-sm-6">
                                                    <div><strong>Kontakt info</strong>
                                                        <p><input type="text" id="info_email" name="info_email"
                                                                placeholder="{{ user.info_email }}"><a href="#">redigera <i
                                                                    class="fas fa-pencil-alt"></i></a></p>
                                                        <p><input type="text" id="phone" name="phone"
                                                                placeholder="{{ user.phone }}"><a href="#">redigera <i
                                                                    class="fas fa-pencil-alt"></i></a></p>
                                                    </div>
                                                </li>
                                                <li class="list-item col-sm-6">
                                                    <div><strong>Hemsida</strong>
                                                        <p><input type="text" id="website" name="website"
                                                                placeholder="{{  user.website  }}"><a href="#">redigera
                                                                <i class="fas fa-pencil-alt"></i></a></p>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>

                                    </div>
                                    <div class="clear"></div>
                                </div>




                                <div class="right-content-btn">
                                    <button class="btn" type="submit">Spara inställningar</button>
                                </div>
                                </form>

                            </div>
                            <div id="menu1" class="tab-pane fade">
                                <div class="container installningar">
                                    <div class="row">
                                        <div class="col-sm-12 col-md-6">
                                            <h2>Uppgifter</h2>

                                            <form action="/update/account" method="POST" enctype="multipart/form-data">
                                                <ul>
                                                    <li><label>Epost</label>
                                                        <input type="text" id="email" name="email"
                                                            placeholder=" {{ user.email }}">
                                                    </li>
                                                    <li><label>Nytt Lösenord</label>
                                                        <input type="text" id="password" name="password" placeholder="">
                                                    </li>
                                                    <li><label>bekräfta Nytt Lösenord</label>
                                                        <input type="text" name=""></li>
                                                </ul>
                                                <button id="submit" name="submit" class="btn">Ändra Lösendord</button>
                                            </form>


                                        </div>
                                        <div class="col-sm-12 col-md-6">

                                            <h2>Notiser </h2>

                                            <form action="/notifications" method="POST">
                                                <ul>
                                                    <li><label>jag vill prenumerera på Praktils Nyhetsbrev</label>
                                                        <input type="radio" id="notifications" name="notifications"> Ja
                                                        tack!</li>
                                                </ul>
                                                <button type="submit" class="btn">Spara Notisinställningar</button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="row social">
                                        <div class="col-sm-12 col-md-6">
                                            <h2>Sociala Medier</h2>
                                            <form>
                                                <ul>
                                                    <li><a href="#"><i class="fab fa-facebook"></i></a></li>
                                                    <li><a href="#"><i class="fab fa-linkedin"></i></a></li>
                                                    <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                                    <li><a href="#"><i class="fab fa-snapchat"></i></a></li>
                                                </ul>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </article>

                </div>

            </div>
        </div>
    </div>
</div>